[user]
	email = pahlevi.fikri.auliya@gmail.com
	name = Pahlevi Fikri Auliya
[core]
	editor = vim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
[color]
	ui = auto
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[diff]
	tool = vimdiff
[alias]
	a = add
	b = branch
	ba = branch -a
	c = commit
	ca = commit -a
	cm = commit -m
	cam = commit -am
	#############
	cl = clone
	clg = !sh -c 'git clone git://github.com/$1 $(basename $1)' -
	clgp = !sh -c 'git clone git@github.com:$(git config --get user.username)/$1 $1' -
	#############
	d = diff
	dc = diff --cached
	ds = diff --staged
	#############
	f = fetch
	fo = fetch origin
	fu = fetch upstream
	#############
	g = grep -p
	#############
	l = log --oneline
	lg = log --oneline --graph --decorate
	#############
	m = merge
	#############
	co = checkout
	#############
	ps = push
	#############
	pso = push origin
	#############
	pl = pull
	pb = pull --rebase
	#############
	plo = pull origin
	#############
	rehh = reset --hard HEAD
	#############
	r = remote
	ra = remote add
	rr = remote rm
	rv = remote -v
	#############
	s = status
	sb = status -s -b
	#############
	sa = stash apply
	sl = stash list
	sp = stash pop
	#############
	t = tag
	#############
